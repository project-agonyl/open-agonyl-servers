# syntax=docker/dockerfile:1

FROM golang:1.24-alpine as builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o migrate-app ./migrate/main.go

# Minimal final image
FROM alpine:3.19
COPY --from=builder /app/migrate-app /usr/local/bin/migrate-app

ENTRYPOINT ["migrate-app"]
